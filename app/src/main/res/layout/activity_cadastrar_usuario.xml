<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundLogin"
    tools:context=".CadastrarUsuario" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imgHeaderCadUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:adjustViewBounds="true"
            android:paddingBottom="10dp"
            app:srcCompat="@drawable/fundo_header_usuario" />


        <EditText
            android:id="@+id/txtNome"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="@string/txtNome"
            android:paddingTop="20dp"
            android:textColor="@color/colorEdit"
            android:textColorHint="@color/colorEdit"
            android:textStyle="normal"
            android:theme="@style/EditCrudTheme" />

        <EditText
            android:id="@+id/txtUsuario"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="@string/txtUsuario"
            android:inputType="textCapCharacters|textPersonName"
            android:paddingTop="20dp"
            android:textColor="@color/colorEdit"
            android:textColorHint="@color/colorEdit"
            android:textStyle="normal"
            android:theme="@style/EditCrudTheme" />

        <EditText
            android:id="@+id/txtSenha"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="@string/txtSenha"
            android:inputType="textPassword"
            android:paddingTop="20dp"
            android:textColor="@color/colorEdit"
            android:textColorHint="@color/colorEdit"
            android:textStyle="normal"
            android:theme="@style/EditCrudTheme" />

        <Button
            android:id="@+id/btnRegistrarUsuario"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:onClick="onClickRegistrar"
            android:text="@string/btnSalvar"
            android:visibility="visible"
            style="@style/Widget.AppCompat.Button.Colored"/>
    </LinearLayout>
</ScrollView>