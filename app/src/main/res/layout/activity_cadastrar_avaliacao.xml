<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundLogin"
    tools:context=".CadastrarAvaliacao" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:adjustViewBounds="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/fundo_header_posicao" />

        <EditText
            android:id="@+id/txtCadAvaliacao"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="@string/txtNovaAvaliacao"
            android:paddingTop="20dp"
            android:textColor="@color/colorEdit"
            android:textColorHint="@color/colorEdit"
            android:textStyle="normal"
            android:theme="@style/EditCrudTheme" />


        <Spinner
            android:id="@+id/cbAvPosicao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Posição"/>

        <Button
            android:id="@+id/btnCadAvaliacao"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:onClick="onClickConfirmar"
            android:text="@string/btnSalvar"
            android:visibility="visible"
            android:theme="@style/AppTheme.Button"/>


    </LinearLayout>
</ScrollView>